<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <GenerateAssemblyInfo>True</GenerateAssemblyInfo>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Title>IqOption Api</Title>
    <Authors>Mongkon Eiadon</Authors>
    <Company>Monngkon Eiadon</Company>
    <Copyright>Copyright (c) Mongkon 2018</Copyright>
    <Description>Iqoption Api for .NET - https://github.com/MongkonEiadon/Iqoption.Net</Description>
    <PackageTags>IqOption Api</PackageTags>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/MongkonEiadon/Iqoption.Net</RepositoryUrl>
    <PackageProjectUrl>https://mongkoneiadon.github.io/Iqoption.Net/</PackageProjectUrl>
    <NeutralLanguage>en-US</NeutralLanguage>
    <PackageReleaseNotes>
      - Upgrade to purely .NET Standard 2.0
      - No longer support for .NET462 and below
      - Using ToObservable on each property of Api/IqWebSocket/IqHttpClient for as IObservable&lt;T&gt;
      - Support Changebalance feature
    </PackageReleaseNotes>
    <AssemblyVersion>2.0.0.0</AssemblyVersion>
    <FileVersion>2.0.0.0</FileVersion>
    <Version>2.0.0-alpha1</Version>
    <LangVersion>7.2</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
    <DefineConstants>net_std20</DefineConstants>
    <DefineConstants>LIBLOG_PUBLIC</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="extensions\ObservedExtensions.cs" />
    <Compile Remove="IIqOptionApi.cs" />
    <Compile Remove="IqOptionApi.cs" />
    <Compile Remove="ws\IqOptionWebSocketClient.cs" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Dawn.Guard" Version="1.8.0" />
    <PackageReference Include="LibLog" Version="5.0.6" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="polly" Version="7.0.3" />
    <PackageReference Include="reactiveui" Version="9.10.1" />
    <PackageReference Include="restsharp" Version="106.6.7" />
    <PackageReference Include="System.Reactive" Version="4.1.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="2.2.0" />
    <PackageReference Include="websocket4net" Version="0.15.2" />
  </ItemGroup>
  
</Project>
